  "description": "Tooling to validate and generate documentation of metadata profile stores",
  "scripts": {
    "test_validation": "ts-node src/validate-md-profile.ts test-data/profile-store-1.json",
    "generate_docs": "asyncapi generate fromTemplate json_schema/asyncapi.yaml @asyncapi/html-template -o ./public --force-write && cat json_schema/add.css >> ./public/css/global.min.css",
    "prepare_publish": "rm -rf dist/* && tsc && cp ./json_schema/md-profile/md-profile.schema.json ./dist",
    "postprepare_publish":  "cp ./json_schema/md-profile-config/md-profile-config.schema.json ./dist && cp ./package.json ./dist",
    "npm_publish": "./dist/npm publish --access public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iqb-vocabs/validate-md-profile.git"
  },
  "bugs": {
    "url": "https://github.com/iqb-vocabs/validate-md-profile/issues"
  },
  "homepage": "https://github.com/iqb-vocabs/validate-md-profile#readme",
  "dependencies": {
    "ajv": "^8.12.0",
    "@iqb/metadata": "0.3.2"
  },
  "devDependencies": {
    "@types/node": "^20.4.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
